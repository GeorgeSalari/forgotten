<div class="forum_group">
  <div class="forum_group_name">
    <%= link_to "Создание нового топика в теме #{@theme.title}", group_path(@theme) %>
  </div>
  <div>
    <%= form_for @topic do |f| %>
    <div class="group_create_update">
      <%= f.label "Название топика: " %>
      <%= f.text_field :title, placeholder: "Введите название темы" %>
      <%= f.cktext_area :content %>
      <%= f.hidden_field :group_id, value: @theme.group.id %>
      <%= f.hidden_field :theme_id, value: @theme.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <div class="group_create_update">
      <%= f.submit "Создать", class: "new_group_submit" %>
    </div>
    <% end %>
  </div>
</div>
