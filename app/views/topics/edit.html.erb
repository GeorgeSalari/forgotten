<div class="forum_group">
  <div class="forum_group_name">
    <%= link_to "Редактирование топика #{@topic.title}", topic_path(@topic) %>
  </div>
  <div>
    <%= form_for @topic do |form| %>
    <div class="group_create_update">
      <%= render partial: 'topics/form', object: form %>
    </div>
    <div class="group_create_update">
      <%= form.submit "Сохранить", class: "new_group_submit" %>
    </div>
    <% end %>
  </div>
</div>
